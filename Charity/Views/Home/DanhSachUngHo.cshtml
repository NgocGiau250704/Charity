@using PagedList.Mvc;
@model PagedList.IPagedList<Charity.Models.Donate>
@{
    ViewBag.title = "Danh sách ủng hộ";
}

<div class="container-fluid page-header mb-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container text-center">
        <h2 class="display-4 text-white animated slideInDown mb-4">Danh sách ủng hộ</h2>
    </div>
</div>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <div class="card mt-5">
                <div class="card-header">
                    <h3 class="text-center">Danh sách ủng hộ</h3>
                </div>
                <div class="card-body ">
                    <form method="get" action="/@ViewBag.meta" class="mb-4">
                        <div class="row">
                            <div class="col-md-4">
                                <input type="text" name="searchName" class="form-control" placeholder="Tên người ủng hộ" value="" />
                            </div>
                            <div class="col-md-2">
                                <input type="number" name="searchDay" class="form-control" placeholder="Ngày" value="" />
                            </div>
                            <div class="col-md-2">
                                <input type="number" name="searchMonth" class="form-control" placeholder="Tháng" value="" />
                            </div>
                            <div class="col-md-2">
                                <input type="number" name="searchYear" class="form-control" placeholder="Năm" value="" />
                            </div>
                            <div class="col-md-2">
                                <button type="submit" class="btn btn-primary">Tìm kiếm</button>
                            </div>
                        </div>
                    </form>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Ngày ủng hộ</th>
                                <th>Tên người ủng hộ</th>
                                <th>Số tiền ủng hộ</th>
                                <th>Nội dung</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.datebegin</td>
                                    <td>@item.PersonDonateName</td>
                                    <td>@item.DonateMoney</td>
                                    <td>@item.Infor</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="text-dark pagination-container d-flex justify-content-center">
                        Trang @Html.PagedListPager(Model, page => Url.Action("DanhSachUngHo", new { page }))
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .pagination-container .pagination a,
    .pagination-container .pagination span {
        font-size: 1.2em;
        margin: 0 7px; /* Add spacing between numbers */
    }
    .table-striped th, .table-striped td {
        color: black; /* Ensure text color is black */
    }
</style>