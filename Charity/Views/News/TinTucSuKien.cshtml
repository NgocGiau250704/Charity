@using PagedList.Mvc;
@using Charity.Helpers;
@model PagedList.IPagedList<Charity.Models.News>
@{
    ViewBag.Title = "Tin Tức Sự Kiện";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Page Header Start -->
<div class="container-fluid page-header mb-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container text-center">
        <h2 class="display-4 text-white animated slideInDown mb-4 ">Tin tức - Sự kiện</h2>

    </div>
</div>
<!-- Page Header End -->
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <div class="card mt-5">
                <div class="card-header">
                    <h3 class="text-center">Danh sách bài viết</h3>
                </div>
                <div class="card-body">
                    <table class="table table-striped text-dark">
                        <thead>
                            <tr>
                                <th class="col-md-7">Bài viết</th>
                                <th></th>
                                <th>Xem chi tiết</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-dark col-md-7"><h5>@item.NewsName</h5><div>@Html.Raw(StringHelper.Truncate(item.Descrpition, 200))</div></td>
                                    <td><img src="/Content/img/@item.NewsImage" style="width: 200px; height: 200px;"/></td>
                                    <td>
                                        <a href="/@ViewBag.meta/@item.meta/@item.IDnews" class="btn btn-primary">Xem chi tiết</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="text-dark pagination-container d-flex justify-content-center">
                        Trang @Html.PagedListPager(Model, page => Url.Action("TinTucSuKien", new { page }))
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .pagination-container .pagination a,
    .pagination-container .pagination span {
        font-size: 1.2em;
        margin: 0 7px; /* Add spacing between numbers */
    }
</style>

