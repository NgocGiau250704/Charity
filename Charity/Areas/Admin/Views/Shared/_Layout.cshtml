    <script>
        function showPreview(event) {
            var preview = document.getElementById('previewImage'); // Thẻ ảnh xem trước
            var currentImage = document.getElementById('currentImage'); // Thẻ ảnh hiện tại

            // Kiểm tra nếu có file nào được chọn
            if (event.target.files && event.target.files[0]) {
                var reader = new FileReader();

                // Khi file đã được đọc thành công
                reader.onload = function (e) {
                    preview.src = e.target.result; // Gán URL của ảnh xem trước
                    preview.style.display = 'block'; // Hiện ảnh xem trước
                    currentImage.style.display = 'none'; // Ẩn ảnh hiện tại
                };

                // Đọc file dưới dạng URL
                reader.readAsDataURL(event.target.files[0]);
            } else {
                // Nếu người dùng bỏ chọn ảnh, ẩn ảnh xem trước và hiển thị lại ảnh hiện tại
                preview.style.display = 'none';
                currentImage.style.display = 'block';
            }
        }
