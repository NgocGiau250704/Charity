@model Charity.Models.News

@{
    ViewBag.Title = "Xóa Tin Tức";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">

    <h2>Xóa Tin Tức</h2>

    <div>
        <h4>Bạn có chắc chắn muốn xóa tin tức này không?</h4>
        <dl class="dl-horizontal">
            <dt>Tên tin tức</dt>
            <dd>@Model.NewsName</dd>

            <dt>Mô tả</dt>
            <dd>@Model.Descrpition</dd>
        </dl>

        @using (Html.BeginForm("Delete", "TinTuc", new { id = Model.IDnews }, FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <input type="submit" value="Xóa" class="btn btn-danger" />
            @Html.ActionLink("Hủy", "Index", null, new { @class = "btn btn-default" })
        }
    </div>
</div>
