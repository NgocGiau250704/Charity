@model Charity.Models.News

@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper" style="padding: 0 5rem;">
    <h2>Chi tiết</h2>

    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayName("Hình ảnh")
            </dt>

            <dd>
                <img style="width: 200px; margin: auto" src="~/Content/img/@Html.DisplayFor(model => model.NewsImage)" />

            </dd>

            <dt>
                @Html.DisplayName("Tiêu đề")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NewsName)
            </dd>

            <dt>
                @Html.DisplayName("Mô tả")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Descrpition)
            </dd>

            <dt>
                @Html.DisplayName("Slug")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.meta)
            </dd>

            <dt>
                @Html.DisplayName("Trạng thái")
            </dt>

            <dd>
                @if (Model.hide == true)
                {
                    @:Hoạt động
                }
                else
                {
                    @:Khóa
                }
            </dd>

            <dt>
                @Html.DisplayName("Ngày đăng")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.datebegin)
            </dd>

        </dl>
    </div>

</div>